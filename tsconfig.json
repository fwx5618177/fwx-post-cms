{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "noImplicitAny": true
    },
    "include": ["src/**/*", "i18n/**/*", "mocks/**/*"],
    "exclude": ["node_modules", "dist"]
}
